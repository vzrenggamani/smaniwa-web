{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/blog",
        "destination": "https://smaniwaweb-blog.firebaseapp.com"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
